{
    "name": "GifHub",
    "version": "1.0.9",
    "description": "Insert GIFs from Giphy.com into GitHub comments",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["*://github.com/*"],
        "js": ["inject.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "bundle.js",
        "extension.css"
    ],
    "permissions": [
        "https://api.giphy.com/v1/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "peristent": false
    }
}
